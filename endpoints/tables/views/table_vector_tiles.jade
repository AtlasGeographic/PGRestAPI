extends ../../../shared_views/layout

block content
	h4 Vector Tile Service (No client side rendering yet!)
	.results
		- if (featureCollection && featureCollection.length > 0){
			script.
				var mapUrl = "#{featureCollection[0].link}";
				var XMIN = #{xmin};
				var YMIN = #{ymin};
				var XMAX = #{xmax};
				var YMAX = #{ymax};

			//Map Div
			div#map(style='height:400px;width:400px;')

			//Load Leaflet
			script.
				var map = L.map('map');
				var bounds = [[YMIN, XMIN], [YMAX, XMAX]]; //SouthWest, NorthEast (Lat Lon, Lat Lon) grr.
					
				L.tileLayer('http://{s}.tiles.mapbox.com/v3/examples.map-vyofok3q/{z}/{x}/{y}.png').addTo(map);

				//L.tileLayer(mapUrl + '/{z}/{x}/{y}.png').addTo(map);

				// zoom the map to the rectangle bounds
				map.fitBounds(bounds);
					
		-}

		div.section
			h3 Code Sample
			span Here's the vector tile endpoint:

			pre.codePreview
				|#{featureCollection[0].link}/{z}/{x}/{y}.pbf;

			div.helpLink 
				|Get more help with 
				a(href='http://leafletjs.com/',target='_blank') Leaflet 


	-if(infoMessage){
		div.infoMessage
			|#{infoMessage}
	-}
	-if(errorMessage){
		div.errorMessage
			|#{errorMessage}
	-}
						
