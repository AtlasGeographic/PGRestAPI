 
/*----------------------------------------
        styling State Capitals with labels     
  ----------------------------------------*/
 
#nigeria_statecapitals {
  ::label {
    text-name: "[name]";
  	text-face-name: 'Adobe Arabic Regular';
  	text-fill: black;
  	text-size: 14;
    text-placement-type: simple;
  	text-placements: "N,E,W,NE,NW,S,SW,SE";
    text-allow-overlap: false;
  
    text-dy: -7;
    text-dx: 7;
  	}
  
  ::shape {
  	marker-width:4;
    marker-fill:#000000;
    marker-line-color:#000000;
    marker-allow-overlap:true;
  }
  
  	
}